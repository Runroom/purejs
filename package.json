{
  "name": "@runroom/purejs",
  "version": "3.0.0-0",
  "description": "PureJS is a pack of pure javascript, non-jquery, functions exported as Nodejs modules.",
  "author": "Italo Devoto Ramella <italodr@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:Runroom/purejs.git"
  },
  "license": "ISC",
  "keywords": [
    "runroom",
    "starter-kit",
    "library",
    "no-jquery"
  ],
  "main": "lib/purejs.min.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint src test",
    "lint:fix": "eslint --fix src test",
    "clean:node": "rm -rf index.js lib",
    "clean:browser": "rm -rf validator*.js",
    "clean": "npm run clean:node && npm run clean:browser",
    "minify": "uglifyjs validator.js -o validator.min.js  --compress --mangle --comments /Copyright/",
    "build:browser": "webpack",
    "build:node": "babel src -d . --presets @babel/preset-env --plugins add-module-exports",
    "build": "npm run build:browser && npm run build:node",
    "pretest": "npm run lint && npm run build",
    "test": "karma start",
    "test:dev": "karma start",
    "updeps": "ncu"
  },
  "dependencies": {
    "util.promisify": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "chai": "4.2.0",
    "eslint": "5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-prettier": "3.0.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "3.0.0",
    "karma-babel-preprocessor": "8.0.0-beta.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-coveralls": "2.1.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-sinon-chai": "2.0.2",
    "mocha": "5.2.0",
    "npm-check-updates": "2.14.2",
    "puppeteer": "1.9.0",
    "sinon": "6.3.5",
    "sinon-chai": "3.2.0",
    "uglifyjs-webpack-plugin": "2.0.1",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "yargs": "12.0.2"
  },
  "peerDependencies": {
    "prettier": "1.14.3"
  }
}
